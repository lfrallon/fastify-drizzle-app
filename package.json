{
  "name": "fastify-drizzle-app",
  "version": "0.0.1",
  "description": "Fastify TypeScript & drizzle repository",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development node --watch src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node src/index.ts",
    "auth:generate": "npx @better-auth/cli@latest generate",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "better-auth": "^1.4.17",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.1",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "fastify-tsconfig": "^3.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}